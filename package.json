{
  "name": "block-highlighter",
  "displayName": "Block Highlighter",
  "description": "Highlights everything based on current selected block.",
  "version": "1.0.0",
  "license": "MIT",
  "icon": "icon.jpeg",
  "engines": {
    "vscode": "^1.85.0"
  },
  "publisher": "the-e3n",
  "categories": [
    "Other",
    "Visualization"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Block Highlighter Configuration",
      "properties": {
        "blockHighlighter.background": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "array"
            }
          ],
          "items": {
            "type": "number"
          },
          "default": [
            10,
            253,
            255,
            0.05
          ],
          "description": "RGBA array for block highlighting (Default [\"10\", \"253\", \"255\", \".05\"])",
          "order": 0,
          "scope": "language-overridable",
          "maxItems": 4,
          "minItems": 4
        },
        "blockHighlighter.isWholeLine": {
          "type": "boolean",
          "default": true,
          "description": "Highlight the whole line or just the text?",
          "order": 1
        },
        "blockHighlighter.accentCurrentLine": {
          "type": "boolean",
          "default": true,
          "description": "Highlight the line the cursor is in with a lighter color",
          "order": 2
        },
        "blockHighlighter.omit": {
          "type": "array",
          "default": [
            "plaintext"
          ],
          "description": "Array of file languageIDs that won't be parsed for highlighting",
          "order": 3
        },
        "blockHighlighter.openingBrackets": {
          "type": "array",
          "default": [
            "{",
            "[",
            "("
          ],
          "description": "Array of opening brackets",
          "scope": "language-overridable",
          "order": 4
        },
        "blockHighlighter.closingBrackets": {
          "type": "object",
          "default": {
            "{": "}",
            "[": "]",
            "(": ")"
          },
          "description": "Object of closing brackets",
          "scope": "language-overridable",
          "order": 5
        }
      }
    },
    "configurationDefaults": {
      "[javascript]": {
        "blockHighlighter.openingBrackets": [
          "{",
          "[",
          "("
        ],
        "blockHighlighter.closingBrackets": {
          "{": "}",
          "[": "]",
          "(": ")"
        }
      }
    },
    "colors": [
      {
        "id": "blockHighlighter.highlight",
        "description": "Color for highlighting the current color",
        "defaults": {
          "dark": "#97fdff13",
          "light": "#97a7ff06"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/the-e3n/block-highlighter"
  }
}
